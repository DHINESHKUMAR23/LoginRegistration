<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - College Admission System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    body {
        background-size: cover;
        background-position: center center;
        background-image: url('../../Content/college.jpg');
        width: 100%;
        height: 100%;
    }
    .center {
        text-align: center;
        margin: auto;
        width: 40%;
        height: 40%;
        border: 1px solid black;
        padding: 50px;
    }
    .right {
        float: right;
        margin-right: 75px;
        width: 35%;
        height: 35%;
        border: 1px solid black;
        
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        padding: 50px;
    }

    th {
        font-size: 30px;
        align-content: center;
    }




    .left {
        float: left;
        margin: auto;
        width: auto;
        height: auto;
        padding: 10px;
    }



    .text-danger {
        text-align: center;
        color: white;
    }
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }
    
    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 16px 18px;
            text-decoration: none;
        }



            li a:hover {
                background-color: #111;
            }

    .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
    }
</style>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("College Admission System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Admin", "Register", "Admin")</li>
                    <li>@Html.ActionLink("Student", "Register", "Student")</li>
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
